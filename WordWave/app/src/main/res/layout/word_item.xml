<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_student_recycle_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/word_term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/word_definition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="term number"
            android:textColor="@color/black"
            android:layout_below="@+id/word_term"
            android:textSize="14sp"
            android:layout_marginStart="10dp"/>


        <ImageButton
            android:id="@+id/word_speaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:layout_toLeftOf="@+id/star_marker"
            android:src="@drawable/baseline_volume_up_24" />
        <ImageButton
            android:id="@+id/star_marker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:src="@drawable/baseline_star_border_24" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>