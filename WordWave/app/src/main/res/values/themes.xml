<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WordWave" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1566e0</item>
        <item name="colorPrimaryVariant">#1B33B6</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#1566e0</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.WordWave.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WordWave.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WordWave.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.WordWave.Toolbar" parent="Theme.Material3.Light">
        <item name="android:background">@color/white</item> <!-- Màu nền trắng cho Toolbar -->
        <item name="android:textColorPrimary">@color/black</item> <!-- Màu chữ đen cho Toolbar -->
    </style>
</resources>